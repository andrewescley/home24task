<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SelectionActivity">

    <ImageView
            android:layout_width="325dp"
            android:layout_height="337dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageArticle"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.16"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCount" android:textSize="24sp"
            android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageArticle"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="75dp"
            android:layout_height="79dp"
            android:clickable="true" app:srcCompat="@color/colorPrimary"
            android:id="@+id/btFloatLike" app:layout_constraintStart_toEndOf="@+id/textCount"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageArticle"
            app:backgroundTint="@color/colorPrimary"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="75dp"
            android:layout_height="79dp"
            android:clickable="true" app:srcCompat="@color/colorAccent"
            android:id="@+id/btFloatDislike"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageArticle"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textCount"/>
</android.support.constraint.ConstraintLayout>